{% set even = loop.index % 2 == 0 %}
{% set words = item.summary|wordcount %}

<div class="c-billboard{{ ' c-billboard--flip@md' if even }} / u-bg-concrete">
  <div class="c-story">
    <h3 class="c-story__title / u-divide-y">
      {{ item.title }}
    </h3>

    <div class="c-story__excerpt / s-rich-text{{ ' s-rich-text--long' if words > 80 }}">
      {{ item.summary|markdown|safe }}
    </div>

    {% if item.more %}
      <a
        href="{{ item.more.url }}"
        class="c-more"
        {% if item.more.alt %} aria-label="{{ item.more.alt|format(item.title) }}"{% endif %}
      >
        {{ item.more.label }}
      </a>
    {% endif %}
  </div>

  <div class="c-poster">
    <img
      class="c-poster__image / u-object-cover"
      src="{{ item.image.url|default(image)|default('/assets/media/adobestock-99649200.jpg') }}"
      alt="{{ item.image.alt }}"
    >
  </div>
</div>
