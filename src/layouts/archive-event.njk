{% extends "./base.njk" %}

{% set formatShort = languages[lang].dateFormat.short|default("LL/dd") %}
{% set formatLong = languages[lang].dateFormat.long|default("LL/dd/yyyy") %}

{% block main %}
  <div class="c-section c-section--intro / u-bg-concrete">
    {% block heading %}
      {%- if cover.title %}
        <h2 class="c-section__title">
          {{ title }}
        </h2>
      {%- else %}
        {%- if tagline %}
          <div class="c-section__tagline">
            {{ tagline }}
          </div>
        {%- endif %}
        <h1 class="c-section__title / p-name">
          {{ title }}
        </h1>
      {%- endif %}
    {% endblock %}

    {% block content %}
      <div class="o-container">
        <div class="s-rich-text / o-container o-container--prose">
          {{ content|safe }}
        </div>
      </div>
      <div class="o-container u-gap-above">
        <div class="o-grid o-grid--columns-3">
          {%- for event in collections.event|tagged_with(lang)|upcoming %}
            {% include "event.njk" %}
          {%- endfor %}
        </div>
      </div>
    {% endblock %}
  </div>
{% endblock %}
